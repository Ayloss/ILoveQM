/* pages/class-management/class-manage.wxss */
.blueHeader {
  width: 750rpx;
  height: 200.1rpx;
  background-color: #6cf;
  color: #fff;
  font-size: 80rpx;
  padding-top: 8%;
  padding-left: 30.5%;
  display: inline-block;
}

/*蓝色块里面讨论课的字体*/

.seminarText {
  color: #fff;
  font-size: 28rpx;
}

/*讨论课的时间和分组方式View*/

.clockAndGroupView {
  width: 48%;
  margin-top: 5%;
  color: #000;
  font-size: 28rpx;
  float: left;
  padding-left: 1%;
}

/*讨论课的时间和分组方式Icon*/

.clockAndGroupIcon {
  width: 10%;
  height: 40rpx;
  margin-left: 20%;
}

/*班级View*/

.classView {
  display: inline-block;
  margin-top: 100rpx;
  width: 370rpx;
  height: 300rpx;
}

/*班级名*/

.className {
  font-size: 48rpx;
  padding-left: 30%;
}

/*班级Icon*/

.classIcon {
  width: 100%;
  height: 70%;
}
